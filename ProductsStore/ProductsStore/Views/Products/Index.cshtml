@model IEnumerable<ProductsStore.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<div class="" style="margin-top:10px;margin-bottom:10px;">
    @using (Html.BeginForm("Search", "Products"))
    {
        <div class="form-inline">
            <div class="form-group">
                <label>By name:</label>
                <input type="text" class="form-control" name="txtName">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Search</button>
            </div>
        </div>

    }
</div>
<p>
    @Html.ActionLink(" ", "Create", null, null, new { @class = "glyphicon glyphicon-plus btn btn-default" })
</p>
<table class="table table-responsive table-hover">
    <tr style="background-color:orange;">
        <th style="width:20%;">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style="width:20%;">
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th style="width:20%;">
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th style="width:20%;">
            @Html.DisplayNameFor(model => model.image)
        </th>

        <th style="width:20%; text-align:center"> פעולות</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td style="width:20%">
                <img src="@Html.DisplayFor(modelItem => item.image)" style="width:50px;height:50px;" alt="Alternate Text" />
            </td>
            <td style="width:20%">
                @Html.ActionLink("", "Edit", null, new { id = item.ID }, new { @class = " glyphicon glyphicon-pencil btn btn-default" })
                @Html.ActionLink("", "Details", null, new { id = item.ID }, new { @class = " glyphicon glyphicon-list-alt btn btn-default" })
                @Html.ActionLink("", "Delete", null, new { id = item.ID }, new { @class = " glyphicon glyphicon-trash btn btn-default" })
            </td>
        </tr>
    }

</table>
