@model ProductsStore.Models.Cart
@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<div class="container">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5>
                                    <span class="glyphicon glyphicon-shopping-cart"></span>Shopping Cart
                                </h5>
                            </div>
                            <div class="col-xs-6">
                                <a class="btn btn-primary btn-sm btn-block" href="/">
                                    <span class="glyphicon glyphicon-share-alt"></span>Continue shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @foreach (var item in Model.Products)
                    {
                        <div class="row">
                            <div class="col-xs-2">
                                <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.image)">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name">
                                    <strong>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </strong>
                                </h4>
                                <h4>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </small>
                                </h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6>
                                        <strong>
                                            $@Html.DisplayFor(modelItem => item.price) * @Html.DisplayFor(modelItem => item.count)
                                        </strong>
                                    </h6>
                                </div>
                               
                            </div>
                        </div>
                    }
                
                    <hr>
                  @*}*@
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">
                                Total <strong>$ @Html.DisplayFor(m=>m.TotalAmount)</strong>
                            </h4>
                        </div>
                        <div class="col-xs-3">
                            

                            <a href="/products/checkout" type="button" class="btn btn-success btn-block">
                                Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>